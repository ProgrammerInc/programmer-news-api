{
  "name": "@programmer/news-api",
  "description": "Programmer News API Server",
  "private": true,
  "version": "0.1.0",
  "author": {
    "name": "Programmer Incorporated",
    "email": "programmer.incorporated@gmail.com",
    "url": "https://programmer.inc"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ProgrammerInc/programmer-news-api-server.git"
  },
  "license": "MIT",
  "homepage": "https://programmer.news",
  "bugs": {
    "url": "https://github.com/ProgrammerInc/programmer-news-api-server/issues"
  },
  "scripts": {
    "init": "npm-run-all docs prisma:gen build",
    "prebuild": "rimraf dist",
    "build": "nest build",
    "start": "nest start",
    "start:all": "concurrently \"npm:start:prod\" \"npm:start:worker\"",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "start:worker": "node dist/worker",
    "prisma:gen": "prisma generate --schema src/prisma/schema.prisma",
    "prisma:save": "prisma migrate save --schema src/prisma/schema.prisma --experimental",
    "prisma:up": "prisma migrate up --schema src/prisma/schema.prisma --experimental",
    "prisma:down": "prisma migrate down --schema src/prisma/schema.prisma --experimental",
    "prisma:watch": "prisma generate --schema src/prisma/schema.prisma --watch",
    "prisma:studio": "prisma studio --schema src/prisma/schema.prisma",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "docs": "compodoc -p tsconfig.json -d docs",
    "docs:serve": "compodoc -p tsconfig.json -d docs -s",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "lint:fix": "npm run lint -- --fix",
    "lint:staged": "lint-staged",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "npm:check": "npm-check --skip-unused",
    "npm:update": "npm-check --update --skip-unused"
  },
  "dependencies": {
    "@hapi/joi": "^17.1.1",
    "@nestjs/common": "^7.0.0",
    "@nestjs/config": "^0.5.0",
    "@nestjs/core": "^7.0.0",
    "@nestjs/graphql": "^7.6.0",
    "@nestjs/microservices": "^7.4.4",
    "@nestjs/platform-express": "^7.0.0",
    "@nestjs/serve-static": "^2.1.3",
    "@nestjs/terminus": "^7.0.1",
    "@prisma/client": "^2.7.1",
    "apollo-server-express": "^2.17.0",
    "class-transformer": "^0.3.1",
    "class-validator": "^0.12.2",
    "compression": "^1.7.4",
    "csurf": "^1.11.0",
    "dotenv": "^8.2.0",
    "express-rate-limit": "^5.1.3",
    "graphql": "^15.3.0",
    "graphql-tools": "^6.2.3",
    "helmet": "^4.1.1",
    "redis": "^3.0.2",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rss-parser": "^3.9.0",
    "rxjs": "^6.5.4"
  },
  "devDependencies": {
    "@compodoc/compodoc": "^1.1.11",
    "@nestjs/cli": "^7.0.0",
    "@nestjs/schematics": "^7.0.0",
    "@nestjs/testing": "^7.0.0",
    "@prisma/cli": "^2.7.1",
    "@types/express": "^4.17.3",
    "@types/hapi__joi": "^17.1.4",
    "@types/jest": "^26.0.14",
    "@types/node": "^14.11.1",
    "@types/supertest": "^2.0.8",
    "@typescript-eslint/eslint-plugin": "^4.1.1",
    "@typescript-eslint/parser": "^4.1.1",
    "concurrently": "^5.3.0",
    "eslint": "^7.9.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-import": "^2.20.1",
    "husky": "^4.3.0",
    "jest": "26.4.2",
    "lint-staged": "^10.4.0",
    "npm-check": "^5.9.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.1.2",
    "supertest": "^4.0.2",
    "ts-jest": "^26.3.0",
    "ts-loader": "^8.0.4",
    "ts-node": "9.0.0",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.0.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": "eslint \"{src,apps,libs,test}/**/*.ts\" --cache --fix"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "keywords": [
    "programmer inc",
    "programmer",
    "incorporated",
    "news",
    "api",
    "server"
  ]
}